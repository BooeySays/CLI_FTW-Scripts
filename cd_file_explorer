#!/bin/bash

CDFILEEX(){
cd "$1";
clear;
echo -e "\[\e[33m\][\[\e[m\] üë§ \[\e[32m\]\u\[\e[m\] \[\e[33m\]]\[\e[m\] \[\e[33m\][\[\e[m\] üíª \[\e[32m\]\h\[\e[m\] \[\e[33m\]]\[\e[m\] ";
echo -e " ";
echo -e "\e[36m\][ üìÅ \e[33m$PWD \e[36m]\e[00m ";
